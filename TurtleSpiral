import turtle               
wn = turtle.Screen() 
alex = turtle.Turtle()     
alex.speed(0)


numSides = input("How many sides to this shape?")
numSides = int(numSides)
ang = 360/numSides
init_side_length = input ("What is the length of the sides?")
init_side_length=int(init_side_length)
i = init_side_length
incr_num = input ("What is the increment number?")
incr_num=int(incr_num)




alex.forward(i)
alex.left(ang)
alex.forward(i)
alex.left(ang)               
alex.forward(i)         
alex.left(ang)
i=i-incr_num
alex.forward(i)


while(i):            
    alex.left(ang)
    alex.forward(i)
    alex.left(ang)
    i=i-incr_num
    alex.forward (i)
    
    if i <0:
      break
    
